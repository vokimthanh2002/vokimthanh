<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#00FFFF">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_chevron_left"/>
            <TextView
                android:layout_marginTop="19dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Back"
                android:textSize="25dp"
                android:textColor="#f8f8ff"/>
           <TextView
               android:layout_marginTop="19dp"
               android:layout_marginLeft="60dp"
               android:layout_width="80dp"
               android:layout_height="50dp"
               android:text="Profile"
               android:textSize="25dp"
               android:textColor="#f8f8ff"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/ic_baseline_settings"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"

            android:layout_height="3dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="#00FFFF"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:paddingTop="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder"
                    android:layout_marginTop="30dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="9dp"
                        android:background="@drawable/ic_baseline_person"/>
                </RelativeLayout>


            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="3"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/circle"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                >

            </TextView>

            </RelativeLayout>



            <TextView
                android:layout_marginTop="17dp"
                android:layout_marginLeft="123dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Profile name"
                android:textSize="28dp"
                android:textColor="#f8f8ff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="125 Friend"
                    android:textSize="25dp"
                    android:textColor="#f8f8ff"/>
                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="2dp"
                    android:background="#FFFFFF"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="250         Followers"
                    android:textSize="25dp"
                    android:textColor="#f8f8ff"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"

            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:background="@drawable/boder"
                android:gravity="center"
                android:orientation="vertical">

                    <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:background="@null"
                    android:text="    email: vothanh6081@gmail.com"
                    android:textColor="#00FFFF"
                    android:inputType="textEmailAddress" />
                <View
                    android:layout_width="match_parent"
                    android:background="#00FFFF"
                    android:layout_height="3dp"/>

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#00FFFF"
                    android:ems="10"
                    android:text="    Phone: +84852146552"
                    android:background="@null"
                    android:inputType="phone" />
                <View
                    android:layout_width="match_parent"
                    android:background="#00FFFF"
                    android:layout_height="3dp"/>

                <EditText
                    android:id="@+id/editTextSkype"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#00FFFF"
                    android:background="@null"
                    android:ems="10"
                    android:text="    Skype: me007"
                    android:inputType="phone" />
                <View
                    android:layout_width="match_parent"
                    android:background="#00FFFF"
                    android:layout_height="3dp"/>

                <EditText
                    android:id="@+id/editTextWeb"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="55dp"
                    android:textColor="#00FFFF"
                    android:ems="10"
                    android:text="    Web: cssauthor.com/"
                    android:inputType="phone" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
